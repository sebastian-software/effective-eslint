{
  "name": "@effective/eslint-config",
  "version": "5.1.0",
  "description": "ESLint Config for TypeScript and ReactJS",
  "main": "index.js",
  "type": "module",
  "files": [
    "index.js",
    "rules.json"
  ],
  "scripts": {
    "build": "tsx src/index.ts",
    "check": "tsc --noEmit",
    "update": "ncu -ui",
    "is-clean": "git diff-files --quiet",
    "test": "npm run build && npm run is-clean",
    "prepare": "npm run build",
    "release": "git push && release-it --ci patch",
    "release:minor": "git push && release-it --ci minor",
    "release:major": "git push && release-it --ci major"
  },
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript",
    "react"
  ],
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "packageManager": "pnpm@8.15.6+sha256.01c01eeb990e379b31ef19c03e9d06a14afa5250b82e81303f88721c99ff2e6f",
  "peerDependencies": {
    "eslint": ">= 8"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.8.1",
    "@types/eslint": "^8.56.7",
    "@types/node": "^20.12.4",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.1.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-config-xo": "^0.44.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-config-xo-typescript": "^4.0.0",
    "npm-check-updates": "^16.14.18",
    "prettier": "^3.2.5",
    "release-it": "^17.1.1",
    "tsx": "^4.7.2",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint-plugin-jsdoc": "^48.2.2",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^2.4.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "eslint-plugin-unused-imports": "^3.1.0"
  }
}
